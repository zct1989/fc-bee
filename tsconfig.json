{
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "target": "ES2017",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist"
  },
  "compileOnSave": false
}